"
I am a command used for highlighting a fragment of code.

I am generated by text highlighters that are based on grammars.
"
Class {
	#name : #PhanideHighlightCommand,
	#superclass : #Object,
	#instVars : [
		'start',
		'stop'
	],
	#category : #'Phanide-SyntaxHighlighting-Commands'
}

{ #category : #accessing }
PhanideHighlightCommand >> executeOnSegmentTree: tree withStyleTable: styleTable [
	self subclassResponsibility
]

{ #category : #tokens }
PhanideHighlightCommand >> firstToken: firstToken lastToken: lastToken [
	self start: firstToken start;
		stop: lastToken stop
]

{ #category : #accessing }
PhanideHighlightCommand >> start [
	^ start
]

{ #category : #accessing }
PhanideHighlightCommand >> start: anObject [
	start := anObject
]

{ #category : #accessing }
PhanideHighlightCommand >> stop [
	^ stop
]

{ #category : #accessing }
PhanideHighlightCommand >> stop: anObject [
	stop := anObject
]

{ #category : #tokens }
PhanideHighlightCommand >> token: aToken [
	self start: aToken start;
		stop: aToken stop
]
