			('/\*' multiLineComment -> multiLineComment)
			('//.*' singleLineComment)
			
			('\s*#\s*include\s<[^>]*>' preprocessor)
			('\s*#\s*[A-Za-z_][A-Za-z_0-9]*' preprocessor)

			('alignas' keyword)
			('alignof' keyword)
			('auto' keyword)
			('break' keyword)
			('case' keyword)
			('class' keyword)
			('const_cast' keyword)
			('continue' keyword)
			('decltype' keyword)
			('default' keyword)
			('delete' keyword)
			('do' keyword)
			('dynamic_cast' keyword)
			('else' keyword)
