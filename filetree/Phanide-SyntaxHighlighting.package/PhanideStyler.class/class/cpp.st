			('goto' keyword)
			('if' keyword)
			('inline' keyword)
			('mutable' keyword)
			('namespace' keyword)
			('new' keyword)
			('noexcept' keyword)
			('operator' keyword)
			('private' keyword)
			('protected' keyword)
			('public' keyword)
			('reinterpret_cast' keyword)
